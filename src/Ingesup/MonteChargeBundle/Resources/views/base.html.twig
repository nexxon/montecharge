        * { -webkit-box-sizing:border-box; -moz-box-sizing:border-box; -ms-box-sizing:border-box; -o-box-sizing:border-box; box-sizing:border-box; }

        html { width: 100%; height:100%; overflow:hidden; }

        body {
            width: 100%;
            height:100%;
            font-family: 'Helvetica';

        }
        input {
            padding-left: 5px;
        }
        .block_center {
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -135px 0 0 -280px;
            width:560px;
            height:270px;
        }
        /*input:focus { box-shadow: inset 0 -5px 45px rgba(100,100,100,0.4), 0 1px 1px rgba(255,255,255,0.2); }*/


        .block_center span{
            font-size: 40px;
        }
        .block_center p{
            line-height: 40px;
        }
        .btnStudent,
        .btnAdmin{
            display: block;
            background-color: #ff2c5d;
            color: white;
            height: 130px;
            width: 150px;
            text-align: center;
            margin: 0 10px;
            text-decoration: none;
            font-size: 20px;
            border-radius: 10px;
            margin-bottom: 10px;
            transition: width .8s, height .8s, background-color .4s ;
            padding-top: 20px;

        }
        .btnStudent:hover,
        .btnAdmin:hover{
            width: 250px;
            color: white;
            text-decoration: none;
            background-color: #2dc89b;
        }

        .leftLogin{
            width: 50%;
            height: 100%;
            float: left;

        }
        .leftLogin img{
            width: 100%;
            padding-right: 10%;
        }
        .rightLogin{
            float: left;
            width: 50%;
            border-left: 1px solid gray;
            padding-left: 2%;
        }

    </style>



    <div class="block_center">
        <div class="leftLogin">
            <img src="{{ asset('assets/image/logo.jpg') }}" alt="logo">
            <h4>Project Platform</h4>
        </div>
        <div class="rightLogin">
            {% block default_page %}
            {% endblock %}
            {% block fos_user_content %}
            {% endblock %}
            {% block admin_login %}
            {% endblock %}
        </div>
    </div>
